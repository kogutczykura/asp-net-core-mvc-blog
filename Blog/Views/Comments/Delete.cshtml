@model Blog.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Jesteś pewien, że chcesz to usunąć?</h3>
<div>
    <h4>Komentarz</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Zawartość
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            Id postu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
