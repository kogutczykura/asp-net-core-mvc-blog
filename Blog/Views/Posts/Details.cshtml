@using Blog.Models;

@{
    ViewData["Title"] = @ViewBag.post.Title;
}

<h1>PostsDetails</h1>

<hr />
<img src="@ViewBag.post.ImageUrl" width="200" height="200" />
<hr />
<dl class="row">
   
    <dt class="col-sm-2">
        Content
    </dt>
    <dd class="col-sm-10">
        @ViewBag.post.Content;
    </dd>

    <dt class="col-sm-2">
        Description
    </dt>
    <dd class="col-sm-10">
        @ViewBag.post.Description;
    </dd>
</dl>

<div class="row">
    <div class="col-md-10">
        <h3>Leave a comment</h3>
        <form asp-action="CommentPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="postId" value="@ViewBag.post.Id" />
            <div class="form-group">
                <label for="content" class="control-label"></label>
                <textarea name="content" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.post.CommentKey != null)
{
    <h3>Comments:</h3>
    @foreach (Comment comment in ViewBag.post.CommentKey)
    {
        <div class="card p-3">
            @comment.Id
            <div>
                @comment.Content
            </div>
        </div>
    }
}